public class Supercars {
    String make;
    String model;
    int horsePower;
    String colour;
    
 }  

  public Supercars(String make, String model, int horsePower, String colour) {
        this.make = make;
        this.model = model;
        this.horsePower = horsePower;
        this.colour = colour;
    }
  public void drive(String direction) {
        System.out.println("The " + colour + " " + make + model + " is driving " + direction+ horsePower);
    }  
public static void main(String[] args) {
       
        Supercars myCar = new Supercars("Ferrari", "Testarossa", 650, "Red");
        myCar.drive("forward");
       Supercars myCar1 = new Supercars("Porshe","911",400,"blue");
        myCar1.drive("left");
        Supercarc myCar2= new Supercars("Bugatti","Veron",380,"black");
        mycar2.drive("right");
        Supercarc myCar3= new Supercars("Mazda","Sport",300,"Green");
        mycar3.drive("backwards");
    }
}

    

